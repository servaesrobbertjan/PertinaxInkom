<UserControl x:Class="PertinaxInkom.UcParticipant2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PertinaxInkom"
             mc:Ignorable="d" 
             d:DesignHeight="1028" d:DesignWidth="1590">
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/whitepaperback.png"/>
        </StackPanel.Background>
        <TextBlock Text="Participant" HorizontalAlignment="Center" FontSize="72" Margin=" 0,10,0,40"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Name="txtError" FontSize="20" Foreground="red" MinHeight="150" Grid.Column="1" Grid.ColumnSpan="2"/>

            <TextBlock Name="txtFirstName" Text="Firstname: " Grid.Row="2" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbFirstnameEID" Grid.Row="2" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtLastName" Text="Lastname :" Grid.Row="3" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbLastNameEID" Grid.Row="3" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtBirthDate" Text="BirthDate :" Grid.Row="4" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbBirthDateEID" Grid.Row="4" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtStreetName" Text="StreetName :" Grid.Row="5" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbStreetNameEID" Grid.Row="5" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtHouseNumber" Text="HouseNumber :" Grid.Row="6" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbHouseNumberEID" Grid.Row="6" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtBusNumber" Text="BusNumber :" Grid.Row="7" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbBusNumberEID" Grid.Row="7" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtZipcode" Text="Zipcode :" Grid.Row="8" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbZipcodeEID" Grid.Row="8" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtCity" Text="City :" Grid.Row="9" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbCityEID" Grid.Row="9" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <TextBlock Name="txtCountry" Text="Country :" Grid.Row="10" Grid.Column="1" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
            <TextBox Name="txbCountryEID" Grid.Row="10" Grid.Column="2" FontSize="20" Background="LightGray" Margin=" 5,5" BorderBrush="Black"/>

            <Button Name="btnSaveAndPrint" Content="Print Wristband" Click="btnSaveAndPrint_Click"  Grid.Row="11" Grid.Column="1" Width="250" Height="50" FontSize="24" BorderBrush="Black" Margin="10,50" HorizontalAlignment="Left"/>

            <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click"  Grid.Row="11" Grid.Column="2" Width="250" Height="50" FontSize="24" BorderBrush="Black" Margin="10,50" HorizontalAlignment="Right"/>
        </Grid>
    </StackPanel>
</UserControl>